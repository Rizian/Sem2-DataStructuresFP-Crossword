//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Wordle.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm1 *Form1;

int State = 1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{


}
//---------------------------------------------------------------------------



void __fastcall TForm1::QClick(TObject *Sender)
{
	switch (State){
        case 1:
			Disp1->Text = "Q";
			State ++;
			break;
		case 2:
			Disp2->Text = "Q";
			State ++;
			break;
		case 3:
            Disp3->Text = "Q";
			State ++;
			break;
		case 4:
			Disp4->Text = "Q";
			State ++;
			break;
		case 5:
            Disp5->Text = "Q";
			break;
	}

}
//---------------------------------------------------------------------------

